<assembly>
  <id>dist</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
  <dependencySets>
    <dependencySet>
      <outputDirectory>dist/</outputDirectory>
    </dependencySet>
  </dependencySets>  
  <fileSets>
    <fileSet>
      <directory>dist/</directory>
      <includes>
      	<include>*.sh</include>
      	<include>*.bat</include>
      	<include>*.xml</include>      	      	
      </includes>
    </fileSet>
    <fileSet>
      <directory>config/</directory>
      <outputDirectory>dist/config/</outputDirectory>
      <includes>
      	<include>*.*</include>
      </includes>
    </fileSet>    
    <fileSet>
      <directory>doc/</directory>
      <outputDirectory>dist/doc/</outputDirectory>
      <includes>
      	<include>*.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>datapack/sql</directory>
      <outputDirectory>sql/</outputDirectory>
      <includes>
      	<include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>datapack/tools</directory>
      <outputDirectory>tools/</outputDirectory>
      <includes>
      	<include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>datapack/dist/gameserver/data</directory>
      <outputDirectory>dist/data</outputDirectory>
      <includes>
      	<include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>datapack/dist/gameserver/optional</directory>
      <outputDirectory>dist/data/optional</outputDirectory>
      <includes>
      	<include>**</include>
      </includes>
    </fileSet>
        
  </fileSets>
</assembly>